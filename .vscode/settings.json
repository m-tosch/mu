{
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "editor.rulers": [
    80
  ],
  "C_Cpp.clang_format_style": "file",
  "C_Cpp.clang_format_path": "/usr/bin/clang-format",
  "cmake.configureOnOpen": true,
  "cpplint.cpplintPath": "/usr/bin/cpplint",
  "testMate.cpp.test.executables": "{build}/**/*{test,Test,TEST}*",
  "autoDocstring.includeExtendedSummary": true,
  "doxdocgen.generic.boolReturnsTrueFalse": false,
  "clang-tidy.executable": "/usr/bin/clang-tidy-9",
  "clang-tidy.compilerArgsBefore": [
    "-Wall",
    "-Wextra"
  ],
  "clang-tidy.compilerArgs": [
    "-std=c++14"
    // todo include sth. sth. sth. for gtest ?
  ]
}