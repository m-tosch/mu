{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "mkdir -p ${workspaceRoot}/build && cd ${workspaceRoot}/build && cmake .. -G \"Unix Makefiles\" && make",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "rm -rf ${workspaceRoot}/build",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "run tests",
      "type": "shell",
      "command": "${workspaceRoot}/build/tests/mu_tests",
      "args": [
        "--gtest_brief=1" // only print test failures
      ],
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "generate doc (doxygen)",
      "type": "shell",
      "command": "doxygen Doxyfile",
      "options": {
        "cwd": "${workspaceRoot}/doc"
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "generate coverage (gcov)",
      "type": "shell",
      "command": "./coverage_gcov.sh",
      "options": {
        "cwd": "${workspaceRoot}/coverage"
      },
      "group": "build",
      "problemMatcher": [],
    },
    {
      "label": "generate coverage (llvm)",
      "type": "shell",
      "command": "./coverage_llvm.sh",
      "options": {
        "cwd": "${workspaceRoot}/coverage"
      },
      "group": "build",
      "problemMatcher": [],
    }
  ]
}