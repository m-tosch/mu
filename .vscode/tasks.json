{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "mkdir -p ${workspaceRoot}/build && cd ${workspaceRoot}/build && cmake .. -G \"Unix Makefiles\" && make",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "rm -rf ${workspaceRoot}/build",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "run tests",
      "type": "shell",
      "command": "${workspaceRoot}/build/tests/mu_tests",
      "args": [
        "--gtest_brief=1" // only print test failures
      ],
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "generate doc",
      "type": "shell",
      "command": "cd ${workspaceRoot}/doc && doxygen Doxyfile",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "generate coverage",
      "type": "shell",
      "command": "cd ${workspaceRoot}/coverage && ./coverage.sh",
      "group": "build",
      "problemMatcher": [],
    }
  ]
}